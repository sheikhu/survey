{% extends "@App/Survey/layout.html.twig" %}

{% block title %}AppBundle:Survey:index{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-6">

        {% include "@App/Survey/_form.html.twig" %}

    </div>

<div class="col-lg-6">
    {% if surveys is defined %}
    <h2>Surveys</h2>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th><i class="fa fa-cogs"></i></th>
        </tr>
        </thead>
        <tbody>
        {% for s in surveys %}
            <tr>
                <td>{{ s.id }}</td>
                <td>{{ s.name }}</td>
                <td>
                    <a href="#">Show</a> |
                    <a href="{{ path('survey_edit', {id: s.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    {% endif %}
</div>

{% endblock %}
