{% extends "::base.html.twig" %}

{% block title %}AppBundle:Survey:index{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-6">
        {{ form_start(form) }}

        <fieldset>
            <legend>New survey</legend>
            {{ form_row(form.name) }}
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <input type="submit"  class="btn btn-success"/>
                </div>
            </div>
        </fieldset>


        {{ form_end(form) }}


    </div>

<div class="col-lg-6">
    {% if surveys is defined %}
    <h2>Surveys</h2>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th><i class="fa fa-cogs"></i></th>
        </tr>
        </thead>
        <tbody>
        {% for s in surveys %}
            <tr>
                <td>{{ s.id }}</td>
                <td>{{ s.name }}</td>
                <td><a href="#">Show</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    {% endif %}
</div>

{% endblock %}
